{
  "compilerOptions": {
      "outDir": "./built/",
      "sourceMap": true,
      "strict": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "module": "es2020",
      "jsx": "react",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "target": "es6",
      "lib": ["es2016", "dom"],
      "allowSyntheticDefaultImports": true
  },
  "include": ["resources/ts/**/*", "resources/sass/types"]
}